html, body, #map
	height 100%
body
	padding: 0;
	margin: 0;
	font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
	a
		color: #00B7FF
	h1
		margin 0
	& > header
		background-color #0099ff
		padding 10px
		box-sizing border-box
		color white
		-moz-box-sizing border-box
		&  fieldset
			border 0 
			out-line none
			& input,& button
				padding 5px
			& input[type='search']
				width 70%
				max-width 300px